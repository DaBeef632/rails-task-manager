
<h1> My tasks </h1>
<% @tasks.each do |task| %>
  <h2> <%= check_box_tag 'completed', task.id, task.completed -%> <%= link_to task.title, task_path(task[:id]) %></h2>
<%= link_to "edit task", edit_task_path(task.id) %>
<%= button_to "delete", task_path(task.id), method: :delete, data: {confirm: "Are you sure?"}%>
<% end %>
<%= link_to "Add a new task", new_task_path %>

